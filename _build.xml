<project name="Swing-Bank" default="run" xmlns:ivy="antlib:org.apache.ivy.ant">
    <taskdef resource="/usr/share/ivy/ant/antlib.xml"
             uri="antlib:org.apache.ivy.ant" classpath="${basedir}/ivy-2.5.0.jar" />
    <target name="resolve">
        <ivy:retrieve />
    </target>
    <target name="compile" depends="resolve">
        <mkdir dir="build/classes" />
        <javac srcdir="src" destdir="build/classes" />
    </target>
    <target name="run" depends="compile">
        <java classname="com.example.Main" fork="true">
            <classpath>
                <path location="build/classes" />
                <path refid="ivy.classpath" />
            </classpath>
        </java>
    </target>

</project>
